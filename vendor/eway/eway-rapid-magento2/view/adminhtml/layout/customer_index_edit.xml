<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="customer_form">
                <block class="Eway\EwayRapid\Block\Adminhtml\Mycard" name="customer_edit_tab_ewayrapid_mycard" template="Eway_EwayRapid::mycards.phtml">
                    <arguments>
                        <argument name="tab_label" xsi:type="string" translate="true">Saved Cards (eWAY)</argument>
                        <argument name="sort_order" xsi:type="number">999</argument>
                    </arguments>
                    <block class="Eway\EwayRapid\Block\Adminhtml\Mycards\Listing" name="ewayrapid_mycard" template="Eway_EwayRapid::mycards/listing.phtml"/>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
