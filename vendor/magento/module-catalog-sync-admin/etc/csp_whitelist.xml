<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="font-src">
            <values>
                <value id="catalog_sync_admin_google_gstatic" type="host">fonts.gstatic.com</value>
                <value id="use_typekit" type="host">use.typekit.net</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="recs_google_fonts" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="p_typekit" type="host">p.typekit.net</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="adobe_assets" type="host">assets.adobedtm.com</value>
                <value id="amcglobal" type="host">amcglobal.sc.omtrdc.net</value>
                <value id="use_typekit" type="host">use.typekit.net</value>
                <value id="catalog_sync_admin_ui" type="host">commerce.adobe.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="catalog_sync_admin_api_gateway" type="host">api.magento.com</value>
                <value id="catalog_sync_admin_adobe_io" type="host">commerce.adobe.io</value>
                <value id="use_typekit" type="host">performance.typekit.net</value>
                <value id="catalog_sync_admin_ui_connect" type="host">commerce.adobe.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
