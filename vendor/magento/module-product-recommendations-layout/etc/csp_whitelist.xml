<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="recommendations_sdk" type="host">magento-recs-sdk.adobe.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="recommendations_api_gateway" type="host">api.magento.com</value>
                <value id="recommendations_adobe_io" type="host">commerce.adobe.io</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
